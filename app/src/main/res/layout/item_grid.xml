<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearId"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:background="@drawable/border">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:id="@+id/grid_image"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraintData">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="188dp"
                android:layout_height="37dp"
                android:layout_marginTop="16dp"
                android:text="Rose"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lbPrice"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/lbTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_name" />

            <TextView
                android:id="@+id/txPrice"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:text="24.4$"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_name" />

            <TextView
                android:id="@+id/lbRestTime"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="21dp"
                android:text="@string/lbPrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbPrice" />

            <TextView
                android:id="@+id/txRestTime"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="13dp"
                android:text="12:06:24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txPrice" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>